{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["BACKEND/**", "Frontend/dist/**"]
      }
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/BACKEND/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/dist/index.html"
    }
  ]
}